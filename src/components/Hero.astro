---
import { Debug } from "astro/components";

const videoResponse = await fetch(
  `https://wp.camerondurington.com/wp-json/wp/v2/media?media_type=mp4`
);
const videoData = await videoResponse.json();

const introResponse = await fetch(
  `https://wp.camerondurington.com/wp-json/wp/v2/pages?slug=home`
);
const introData = await introResponse.json();
---

<section>
  <!-- <div set:html={introData[0].content.rendered} /> -->
  <video src={videoData[0].source_url} autoplay muted loop></video>
</section>

<style>
  section {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    min-height: calc(95vh - 100px);
    max-height: calc(95vh - 100px);
    color: white;
    margin-bottom: 8px;
    position: relative;
    background-color: black;
    overflow: clip;
  }

  video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
  }

  div {
    height: auto;
    width: 100%;
    max-width: 1100px;
    padding: 24px;
    font-size: 18px;
    background-color: rgba(0, 0, 0, 0.6);
    box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.6);
    z-index: 10;
  }
</style>
