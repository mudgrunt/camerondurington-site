<nav>
  <a href="/gallery" class={Astro.url.pathname == "/gallery" ? "active" : ""}
    ><span>Gallery</span></a
  >
  <a href="/" class={Astro.url.pathname == "/" ? "active" : ""}
    ><img src="/camcam.png" /></a
  >
  <a href="/contact" class={Astro.url.pathname == "/contact" ? "active" : ""}
    ><span>Contact</span></a
  >
</nav>

<style>
  nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100px;
    display: flex;
    z-index: 99;
    background: rgba(0, 0, 0, 0.25);
    backdrop-filter: blur(10px);
  }

  nav img {
    max-width: 100%;
    height: auto;
    max-height: 64px;
    filter: brightness(100);
    transition: all 0.5s ease-in-out;
  }

  nav img:hover {
    scale: 1.1;
  }

  nav a {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    text-transform: uppercase;
    transition-duration: var(--timing-short);
    text-decoration: none;
    color: var(--color-red);
    font-size: 18px;
    text-align: center;
    font-weight: 400;
  }

  nav a:nth-of-type(2) {
    font-size: 24px;
  }

  nav a:hover {
    color: white;
    font-weight: 900;
  }

  .active span {
    color: black;
    font-weight: 900;
    background: var(--color-red);
    padding: 8px;
  }

  @media screen and (max-width: 480px) {
    nav a:not(:nth-of-type(2)) {
      font-size: 14px;
    }
  }
</style>
