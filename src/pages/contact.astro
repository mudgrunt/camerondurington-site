---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact">
  <form>
    <label for="name">Name</label>
    <input required name="name" placeholder="Name" type="text" />
    <label for="email">Email</label>
    <input required name="email" placeholder="Email" type="email" />
    <label for="subject">Subject</label>
    <input required name="subject" placeholder="Subject" type="text" />
    <label for="message">Message</label>
    <textarea required name="message" placeholder="Message"></textarea>
    <button>Send</button>
  </form>
</Layout>

<style>
  form {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: 24px;
    max-width: 500px;
  }

  label {
    color: white;
    margin-bottom: 8px;
  }

  input {
    min-height: 48px;
    margin-bottom: 16px;
    padding: 0px 8px;
  }

  textarea {
    min-height: 144px;
    padding: 8px;
    resize: none;
  }

  input,
  textarea {
    border: 3px solid var(--color-red);
    background: transparent;
    color: white;
    outline: none;
    transition: all 0.3s ease-in-out;
    font-size: 16px;
  }

  input:focus,
  textarea:focus {
    background: white;
    color: black;
  }

  input:not(:focus):not(:placeholder-shown):invalid,
  textarea:not(:focus):not(:placeholder-shown):invalid {
    background: white;
    color: red;
  }

  input:not(:focus):not(:placeholder-shown):valid,
  textarea:not(:focus):not(:placeholder-shown):valid {
    background: white;
    color: green;
  }

  button {
    min-height: 48px;
    border-radius: 0px;
    border: none;
    background: var(--color-red);
    font-size: 16px;
  }
</style>
